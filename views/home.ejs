      <div class="container-banner">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item banner-version active">
              <img src="./images/banner/banner-movil.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-tablet.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-pc.png" class=" w-100" alt="...">
            </div>
            <div class="carousel-item banner-version ">
              <img src="./images/banner/banner-movil.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-tablet.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-pc.png" class=" w-100" alt="...">
            </div>
            <div class="carousel-item banner-version ">
              <img src="./images/banner/banner-movil.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-tablet.png" class=" w-100" alt="...">
              <img src="./images/banner/banner-pc.png" class=" w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev justify-content-start" type="button"
            data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
